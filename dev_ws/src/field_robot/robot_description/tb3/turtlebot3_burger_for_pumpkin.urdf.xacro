  <!--link : https://www.raspberrypi.org/documentation/hardware/camera/-->
  <gazebo reference="camera_link">
    <sensor type="camera" name="camera1">
      <update_rate>1</update_rate>
      <camera name="head">
        <!-- The horizontal field of view of the camera in radians -->
        <!-- Pi Fisheye Diagonal: 160 degree (while other normal cameras are typically 72 degree) -->
        <!-- <horizontal_fov>1.085595</horizontal_fov> -->
        <horizontal_fov>1.2</horizontal_fov>
        <image>
          <width>420</width>
          <height>240</height>
          <format>R8G8B8</format>
        </image>
        <!-- Distance in meters from the pose of the sensor to the closest point on the near clip plane -->
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <distortion>
          <k1>0.0</k1>
          <k2>0.0</k2>
          <k3>0.0</k3>
          <p1>0.0</p1>
          <p2>0.0</p2>
        </distortion>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">

        <ros>
          <namespace>custom_ns</namespace>
          <argument>image_raw:=custom</argument>
          <argument>camera_info:=custom_info</argument>
        </ros>

        <camera_name>camera1</camera_name>
        <frame_name>camera_link</frame_name>
        <hack_baseline>0.07</hack_baseline>
      </plugin>
    </sensor>
  </gazebo>

